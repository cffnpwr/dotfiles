[user]
	name = {{ .user.name }}
	email = {{ .user.email }}
	signingkey = {{ .user.signingkey }}
[init]
	templatedir = ~/.config/git/template
[ghq]
	root = ~/git
[credential]
	helper = 
	helper = /usr/local/share/gcm-core/git-credential-manager
[credential "https://dev.azure.com"]
	useHttpPath = true
[commit]
	gpgsign = true
[gpg]
	format = ssh
[gpg "ssh"]
	allowedSignersFile = ~/.config/git/allowed_signers
