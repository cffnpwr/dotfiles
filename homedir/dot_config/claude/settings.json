  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Claude Codeが許可を求めています\" with title \"Claude Code\" subtitle \"確認待ち\" sound name \"Ping\"'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"タスクが完了しました\" with title \"Claude Code\" subtitle \"処理終了\" sound name \"Funk\"'"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash(git commit.*)",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.command' | ~/.config/claude/hooks/validate-git-commit-signing.sh"
          },
          {
            "type": "command",
            "command": "jq -r '.tool_input.command' | grep -o -- '-m \"[^\"]*\"' | sed 's/-m \"//' | sed 's/\"$//' | ~/.config/claude/hooks/validate-commit-message.sh"
          }
        ]
      }
    ]
  }
}
